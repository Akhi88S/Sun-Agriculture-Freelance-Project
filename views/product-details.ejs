<% include _layouts/headerna %>
<html>
<head>
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-166233561-1"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-166233561-1');
  </script>

<style media="screen">
  html,body{
    width: 100%;
    height: 100%;
    margin: 0px;
    padding: 0px;
    overflow-x: hidden;

  }
</style>
</head>
<body>
<a href="/products" class="btn btn-secondary" style="float:right;">Go back</a>
<br>
<div class="row top-row">
  <h1 class="page-header">
    <%= p.title %>
  </h1>
</div>
<div class="row top-row">
  <div class="col-xs-12 col-md-5">
    <img src="<%= p.image %>" alt="" class="spi">
    <br>
  </div>
  <div class="col-xs-12 col-md-6">
    <p class="spi-desc">
      <%= p.desc %>
    </p>
    <p class="price">Price:
      <%= parseFloat(p.price).toFixed(2) %>/-
    </p>
    <% if(loggedIn) { %>
    <p><a href="/cart/add/<%= p.slug %>" class="vd">Add to cart &raquo;</a></p>
    <% } else { %>
    <p>You must be logged in to purchase items.</p>
    <% }; %>
  </div>

</div>
</body>
</html>

<% include _layouts/footer %>
